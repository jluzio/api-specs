{
  "name": "jsonplaceholder-api",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prism-static": "prism mock src/main/resources/jsonplaceholder.yaml",
    "prism-dynamic": "prism mock -d src/main/resources/jsonplaceholder.yaml",
    "validate": "swagger-cli validate src/main/resources/jsonplaceholder.yaml",
    "validate-build": "swagger-cli validate target/jsonplaceholder-v1.0.0.yaml",
    "lint-openapi": "spectral lint src/main/resources/*.yaml --ruleset https://stash.backbase.com/projects/API/repos/api-linting/raw/src/spectral/v5/openapi-rules.yaml",
    "lint-schemas": "spectral lint src/main/resources/schemas/**/*.yaml --ruleset https://stash.backbase.com/projects/API/repos/api-linting/raw/src/spectral/v5/schema-rules.yaml",
    "check-backwards-compatibility": "curl -sL -H \"${SPEC_AUTH}\" https://api.backbase.cloud/doc/$SPEC_NAME -o target/$SPEC_NAME && openapi-diff target/$SPEC_NAME target/openapi.yaml",
    "bundle": "swagger-cli bundle -t yaml -o target/openapi.yaml src/main/resources/openapi.yaml"
  },
  "dependencies": {
    "@stoplight/prism-cli": "4.3.1",
    "@stoplight/spectral": "5.9.2",
    "openapi-diff": "0.23.4",
    "swagger-cli": "4.0.4"
  }
}